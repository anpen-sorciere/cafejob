# Laravel サブディレクトリ配置用 .htaccess
# プロジェクトルートに配置してください

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # publicディレクトリが存在する場合のみリダイレクト
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/cafecolle/public/
    RewriteRule ^(.*)$ public/$1 [L,QSA]
</IfModule>

# .envファイルの保護
<Files .env>
    Order allow,deny
    Deny from all
</Files>

