# カフェJob .htaccess設定ファイル
# 本番環境用セキュリティ・パフォーマンス設定

# セキュリティヘッダー
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# HTTPS強制リダイレクト（SSL証明書がある場合）
# RewriteEngine On
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ディレクトリリスティング無効
Options -Indexes

# 設定ファイルへの直接アクセス禁止
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>

<Files "database.php">
    Order Allow,Deny
    Deny from all
</Files>

# ログファイルへの直接アクセス禁止
<Files "*.log">
    Order Allow,Deny
    Deny from all
</Files>

# SQLファイルへの直接アクセス禁止
<Files "*.sql">
    Order Allow,Deny
    Deny from all
</Files>

# バックアップファイルへの直接アクセス禁止
<Files "*.bak">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.backup">
    Order Allow,Deny
    Deny from all
</Files>

# 一時ファイルへの直接アクセス禁止
<Files "*.tmp">
    Order Allow,Deny
    Deny from all
</Files>

# パフォーマンス最適化
<IfModule mod_expires.c>
    ExpiresActive On
    
    # CSS・JSファイルのキャッシュ（1週間）
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    
    # 画像ファイルのキャッシュ（1ヶ月）
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    
    # フォントファイルのキャッシュ（1年）
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTMLファイルのキャッシュ（1時間）
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Gzip圧縮
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# キャッシュ制御
<IfModule mod_headers.c>
    # CSS・JSファイルのキャッシュヘッダー
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>
    
    # 画像ファイルのキャッシュヘッダー
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    
    # HTMLファイルのキャッシュヘッダー
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
</IfModule>

# ファイルアップロード制限
<IfModule mod_php.c>
    php_value upload_max_filesize 5M
    php_value post_max_size 5M
    php_value max_execution_time 30
    php_value max_input_time 30
</IfModule>

# エラーページの設定
ErrorDocument 404 /cafejob/404.html
ErrorDocument 500 /cafejob/500.html

# メンテナンスモード（必要に応じて有効化）
# RewriteEngine On
# RewriteCond %{REQUEST_URI} !^/cafejob/maintenance.html$
# RewriteCond %{REQUEST_URI} !^/cafejob/assets/
# RewriteRule ^(.*)$ /cafejob/maintenance.html [R=503,L]

# 不正なアクセスをブロック
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # 悪意のあるリクエストをブロック
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} ^.*(\[|\]|\(|\)|<|>|ê|"|;|\?|\*|=$).* [NC,OR]
    RewriteCond %{QUERY_STRING} (NULL|OUTFILE|LOAD_FILE) [OR]
    RewriteCond %{QUERY_STRING} (\./|\../|\.../)+(motd|etc|bin) [NC,OR]
    RewriteCond %{QUERY_STRING} (localhost|loopback|127\.0\.0\.1) [NC,OR]
    RewriteCond %{QUERY_STRING} (<|>|'|%0A|%0D|%27|%3C|%3E|%00) [NC]
    RewriteRule .* - [F,L]
</IfModule>

