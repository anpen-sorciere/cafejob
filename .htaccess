# アップロードディレクトリでのPHP実行禁止
<Directory "uploads">
    <Files "*.php">
        Order Allow,Deny
        Deny from all
    </Files>
</Directory>

# ログディレクトリでのアクセス禁止
<Directory "logs">
    Order Allow,Deny
    Deny from all
</Directory>

